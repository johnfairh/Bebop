{
  "name": "fw2020",
  "version": "0.0.1",
  "description": "Bebop theme",
  "main": "index.js",
  "watch": {
    "css": {
      "patterns": [
        "scss"
      ],
      "extensions": "scss"
    },
    "html": {
      "patterns": [
        "test"
      ],
      "extensions": "html"
    },
    "js": {
      "patterns": [
        "js"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "css:lint": "stylelint --config .stylelintrc --syntax scss \"scss/**/*.scss\" --cache --cache-location .stylelintcache/",
    "css:prefix": "postcss --config postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\"",
    "css:compile": "sass -q --style expanded --source-map --embed-sources --no-error-css scss/main.scss dist/fw2020.css",
    "css:compile2": "sass -q --style expanded --source-map --embed-sources --no-error-css scss/patchmain.scss dist/patch.css",
    "css:minify": "cleancss -O 1 --source-map --source-map-inline-sources --output dist/fw2020.min.css dist/fw2020.css",
    "css:minify2": "cleancss -O 1 --source-map --source-map-inline-sources --output dist/patch.min.css dist/patch.css",
    "css": "npm run css:lint && npm run css:compile && npm run css:compile2 && npm run css:prefix && npm run css:minify && npm run css:minify2",
    "html": "make dist",
    "js:lint": "standard js/*js",
    "js:dist": "make dist",
    "js": "npm run js:lint && npm run js:dist",
    "watch": "npm-watch"
  },
  "author": "John Fairhurst",
  "license": "MIT",
  "devDependencies": {
    "anchor-js": "^4.3.1",
    "autoprefixer": "^10.2.6",
    "bootstrap": "^5.0.1",
    "clean-css-cli": "^5.3.0",
    "corejs-typeahead": "^1.3.1",
    "jquery": "^3.6.0",
    "lunr": "^2.3.9",
    "sass": "^1.32.13",
    "npm-watch": "^0.9.0",
    "popper.js": "^1.16.1",
    "postcss-cli": "^8.3.1",
    "standard": "^16.0.3",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-twbs-bootstrap": "^2.2.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "terser": "^5.7.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "katex": "^0.13.11"
  }
}
